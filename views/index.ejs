<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (admins.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Department</th>
                        <th scope="col">Email-Address</th>
                        <th scope="col">Password</th>
                    </tr>
                </thead>
                <tbody>
                    <% admins.forEach((admin, index) => { %>
                        <tr>
                            <th scope="row"><%= admin.idadmin %></th>
                            <td><%= admin.name %></td>
                            <td><%= admin.departments_csv %></td>
                            <td><%= admin.email_address %></td>
                            <td><%= admin.credential_key %></td>
                            <td>
                                <a href="/edit/<%= admin.idadmin %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= admin.idadmin %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No admins found. Go <a href="/admins/add" >here</a> to add admins.</p>
            <div id="placeHolder"></div>
        <% } %>
    </div>
</div>
</body>
</html>
